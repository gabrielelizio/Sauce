{
  "name": "cypress-automation-project",
  "version": "1.0.0",
  "description": "Projeto de automação de testes utilizando Cypress.",
  "main": "index.js",
  "scripts": {
    "test": "cypress open",
    "test:headless": "cypress run",
    "test:ci": "cypress run --browser chrome --headless",
    "merge:reports": "mochawesome-merge cypress/reports/*.json > cypress/reports/full_report.json",
    "generate:report": "marge cypress/reports/full_report.json -f report -o cypress/reports"
  },
  "author": "Gabriel Elizio",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^15.0.0",
    "mocha": "^10.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.2.0"
  }
}
