{
  "name": "cypress-automation-project",
  "version": "1.0.0",
  "description": "Projeto de automação de testes utilizando Cypress.",
  "main": "index.js",
  "scripts": {
    "test": "cypress open",
    "test:headless": "cypress run",
    "test:ci": "cypress run --browser chrome --headless",
    "merge:reports": "npx mochawesome-merge cypress/reports/mochawesome*.json > cypress/reports/full_report.json",
    "generate:report": "npx marge cypress/reports/full_report.json --output cypress/reports/html --reportFilename index",
    "report": "rimraf cypress/reports && npm run test:ci && npm run merge:reports && npm run generate:report"

  },
  "author": "Gabriel Elizio",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^15.0.0",
    "mocha": "^10.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.2.0",
    "rimraf": "^6.0.1"
  }
}
